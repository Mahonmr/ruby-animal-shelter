<h1>Add a New Customer</h1>

<form class="form-horizontal" action="/customers/new" method="post">
  <div class="form-group">
    <label class="control-label col-sm-2" for="first_name">Name</label>
    <div class="form-inline col-sm-10">
      <input type="text" name="first_name" class="form-control" placeholder="First Name">
      <input type="text" name="last_name" class="form-control" placeholder="Last Name">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="phone">Phone</label>
    <div class="col-sm-10">
      <input type="text" name="phone" class="form-control" placeholder="xxx-xxx-xxxx">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="type">Preferred Animal</label>
    <div class="col-sm-10">
      <select class="form-control" name="type">
        <% @accepted_animals.each() do |animal| %>
          <option> <%= animal %> </option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="breed">Preferred Breed</label>
    <div class="col-sm-10">
      <input type="text" name="breed" class="form-control" placeholder="Breed">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <button type="submit" class="btn btn-default">Add</button>
    </div>
  </div>
</form>
